<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleLayout"
        style="@style/title_bar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sixteen"
            android:scaleType="centerCrop"
            tools:src="@drawable/ill_twin"
            android:contentDescription="@string/artist_pic" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sixteen"
            android:paddingRight="@dimen/sixteen"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorWhite250"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="ABND_MusicalStructure"/>

        <ImageView
            android:id="@+id/home"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/sixteen"
            android:src="@drawable/home_button" />

    </LinearLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="@dimen/sixteen"/>

</LinearLayout>
